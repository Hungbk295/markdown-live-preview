  },
  "homepage": "https://github.com/tanabe/markdown-live-preview#readme",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "nodemon": "^3.0.3",
    "vite": "^6.4.1"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "dompurify": "^3.2.5",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "github-markdown-css": "^5.8.1",
